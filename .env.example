# =============================================================================
# Evidence Suite - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=evidence_suite

# Full URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/evidence_suite

# -----------------------------------------------------------------------------
# REDIS (Cache & Queue)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTLs (seconds)
REDIS_ANALYSIS_CACHE_TTL=3600
REDIS_EMBEDDING_CACHE_TTL=86400

# -----------------------------------------------------------------------------
# API SETTINGS
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Evidence Suite API
API_VERSION=1.0.0

# CORS Origins (comma-separated)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# SECURITY & AUTHENTICATION
# -----------------------------------------------------------------------------
# JWT Configuration (CHANGE IN PRODUCTION!)
API_JWT_SECRET=change-this-to-a-secure-random-string-in-production
API_JWT_ALGORITHM=HS256
API_JWT_EXPIRE_MINUTES=30

# Encryption key for evidence at rest (32 bytes, base64 encoded)
# Generate with: python -c "import secrets; import base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
EVIDENCE_ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# HARDWARE & GPU (RTX 5090 Blackwell)
# -----------------------------------------------------------------------------
HW_THERMAL_WARNING=82
HW_THERMAL_HOT=85
HW_THERMAL_CRITICAL=90
HW_VRAM_BUDGET_MB=20480
HW_BATCH_SIZE=96
HW_MAX_WORKERS=16
HW_USE_ONNX=true
HW_USE_TENSORRT=false

# -----------------------------------------------------------------------------
# ML MODELS
# -----------------------------------------------------------------------------
# HuggingFace token (for gated models)
HUGGINGFACE_TOKEN=

# BERT model for behavioral analysis
BEHAVIORAL_MODEL_NAME=bert-base-uncased
BEHAVIORAL_DEVICE=auto
BEHAVIORAL_MAX_SEQUENCE_LENGTH=512

# Use ONNX Runtime (recommended for RTX 5090)
USE_ONNX_BERT=true

# -----------------------------------------------------------------------------
# STORAGE
# -----------------------------------------------------------------------------
EVIDENCE_STORE_PATH=./evidence_store
MODEL_CACHE_PATH=~/.cache/huggingface

# -----------------------------------------------------------------------------
# OBSERVABILITY
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT={time} | {level} | {name} | {message}

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# BACKGROUND WORKER (ARQ)
# -----------------------------------------------------------------------------
WORKER_MAX_JOBS=10
WORKER_JOB_TIMEOUT=600
WORKER_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------
# Tesseract OCR path (Windows)
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
